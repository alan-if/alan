# Top level Makefile for Alan on MacosX
#

VERSION	= `venum alan -print \\$$v_\\$$r_\\$$s\\$$c`

dist: compiler/alan interpreter/arun
	tar zcvf alan$(VERSION).macosx.ppc.tgz compiler/alan interpreter/arun alan.readme.macosx

compiler/alan:
	cd compiler; make -f Makefile.macosx

interpreter/arun:
	cd interpreter; make -f Makefile.unix

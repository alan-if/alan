#! /bin/bash
# Continuously monitor the arun program for change
# then rerun jregr in current directory
let d0=`stat -c '%Y' ~/Utveckling/Alan/alan/bin/arun`
while true; do
  let d1=`stat -c '%Y' ~/Utveckling/Alan/alan/bin/arun`
  while [ $d0 -eq $d1 ] ; do
    sleep 1
    let d1=`stat -c '%Y' ~/Utveckling/Alan/alan/bin/arun`
  done
  echo -ne '\033c'
  jregr
  let d0=$d1
done
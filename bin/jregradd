#!/bin/bash
# Add the files of a new regression test case to the repository
if [ $# -ne 1 ] ; then
  echo "Usage: `basename $0` <case>"
  echo "where"
  echo "    <case> : the regresion case whose file should be added to the repository"
  exit
fi
git add "$1".alan
git add "$1".expected
if [ -f "$1".input ] ; then git add "$1".input ; fi

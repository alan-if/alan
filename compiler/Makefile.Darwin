#
# Makefile for compiling Alan compiler on MacOSX
#

OS_FLAGS = -mmacosx-version-min=10.5

COMPILER = gcc -m32
EXTRA_COMPILER_FLAGS = -g -Wall -funsigned-char

LINKER = gcc -m32
EXTRA_LINKER_FLAGS = 

CGREEN = yes
CGREENROOT = /usr/local
CGREENDIR = $(CGREENROOT)/include/cgreen
CGREENLIB = -lcgreen

release: OS_FLAGS = -m32
release: EXTRA_COMPILER_FLAGS = -O4

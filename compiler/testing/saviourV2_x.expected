            "Pulling out the drawer a manual falls to the floor."
            LOCATE manual HERE.
            SCORE 10.
        ELSE
            "The desk drawer is now open."
        END IF.
        MAKE drawer open.
    END VERB.

    VERB close DOES
       IF drawer IS NOT open THEN
           "The drawer is already closed."
       ELSE
           "The drawer is now closed."
           MAKE drawer NOT open.
       END IF.
    END VERB.
END OBJECT.



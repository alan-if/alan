OBJECT manual NAME dirty technical manual
    IS
        takeable.
	readable.
        NOT found.
    HAS
	pwindex 0.
        password "".
	pwtry "".

    DESCRIPTION
        "There is a dirty technical manual here."

    MENTIONED
